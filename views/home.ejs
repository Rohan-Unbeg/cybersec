<script>
  // spinner loader 

  document.addEventListener('DOMContentLoaded', function() {
    document.getElementById('spinner').style.display = 'flex'; // Show spinner
  });

  window.addEventListener('load', function() {
    // Set a delay before hiding the spinner
    setTimeout(function() {
      document.getElementById('spinner').style.display = 'none'; // Hide spinner
    }, 500); // Delay in milliseconds
  });


  //navbar fix issue
  window.onscroll = function() {
    var navbar = document.querySelector('.navbar');
    if (window.scrollY > 50) {
      navbar.classList.add('navbar-scrolled');
    } else {
      navbar.classList.remove('navbar-scrolled');
    }
  };


  //remove .bg-transparent
  function handleNavbarBg() {
    const navbar = document.querySelector('.navbar');

    if (window.innerWidth <= 991) {
      navbar.classList.remove('bg-transparent');
    } else {
      navbar.classList.add('bg-transparent');
    }
  }

  // Run the function on page load and on window resize
  window.addEventListener('load', handleNavbarBg);
  window.addEventListener('resize', handleNavbarBg);

  document.addEventListener("DOMContentLoaded", function() {
    const mediumFeed = document.getElementById("medium-feed");
    const loadingElement = document.getElementById("loading");
    const errorElement = document.getElementById("error-message");
    let allPosts = [];

    // Show/hide loading spinner
    function showLoading(show) {
      loadingElement.style.display = show ? "block" : "none";
    }

    // Show error message
    function showError(message) {
      errorElement.textContent = message;
      errorElement.style.display = "block";
    }

    // Hide error message
    function hideError() {
      errorElement.style.display = "none";
    }

    // Fetch Medium RSS feed for @Cyb3rsecurity
    function fetchMediumFeed() {
      showLoading(true);
      hideError();

      fetch("https://api.rss2json.com/v1/api.json?rss_url=https://medium.com/feed/@Cyb3rsecurity")
        .then(response => response.json())
        .then(data => {
          if (!data.items || data.items.length === 0) {
            mediumFeed.innerHTML = "<p class='no-posts-message'>No blog posts available.</p>";
            return;
          }

          // Limit the number of posts to 3
          allPosts = data.items.slice(0, 3).map(post => ({
            title: post.title,
            link: post.link,
            pubDate: new Date(post.pubDate).toLocaleDateString(),
            truncatedDescription: post.description.replace(/<[^>]+>/g, '').substring(0, 100) + "..."
          }));

          renderBlogPosts(allPosts);
        })
        .catch(error => {
          console.error("Error fetching Medium feed:", error);
          showError("Failed to load blog posts. Please try again later.");
        })
        .finally(() => {
          showLoading(false);
        });
    }

    // Render blog posts
    function renderBlogPosts(posts) {
      if (posts.length === 0) {
        mediumFeed.innerHTML = "<p class='no-posts-message'>No posts available at this moment.</p>";
        return;
      }

      mediumFeed.innerHTML = posts.map(post => `
        <div class="col-lg-4 col-md-6 mb-4">
          <div class="card h-100">
            <div class="card-body">
              <h5 class="card-title">${post.title}</h5>
              <p class="card-text">
                <small class="text-muted">${post.pubDate}</small>
              </p>
              <p>${post.truncatedDescription}</p>
              <a href="${post.link}" class="btn btn-primary" target="_blank">Read More</a>
            </div>
          </div>
        </div>
      `).join('');
    }

    // Fetch Medium feed on page load
    fetchMediumFeed();
  });
</script>


